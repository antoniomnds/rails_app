<p style="color: green"><%= notice %></p>

<%= render @article %>

<div>
  <%= link_to "Edit this article", edit_article_path(@article) %> |
  <%= link_to "Back to articles", articles_path %>

  <p>
    <%= button_to "Destroy this article",
                  @article,
                  method: :delete,
                  form: {
                    data: {
                      turbo_confirm: 'Are you sure?'
                    }
                  }
    %>
  </p>
</div>
